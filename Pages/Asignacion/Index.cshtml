@page
@model FleetManager.Pages.Asignaciones.IndexModel
@{
    ViewData["Title"] = "Lista de Asignaciones";
}

<h1>Lista de Asignaciones</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Vehículo</th>
            <th>Conductor</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asignacion in Model.Asignaciones)
        {
            <tr>
                <td>@asignacion.IdAsignacion</td>
                <td>@asignacion.IdVehiculo</td> <!-- Cambiar por la propiedad de relación si existe -->
                <td>@asignacion.IdConductor</td> <!-- Cambiar por la propiedad de relación si existe -->
                <td>@asignacion.FechaInicio.ToString("yyyy-MM-dd")</td>
                <td>@asignacion.FechaFin?.ToString("yyyy-MM-dd") ?? "N/A"</td>
            </tr>
        }
    </tbody>
</table>
