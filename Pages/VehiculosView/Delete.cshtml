@page
@model FleetManager.Pages.VehiculosView.DeleteModel
@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h1>Eliminar Vehículo</h1>

<h4>¿Estás seguro de que deseas eliminar este vehículo?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Vehiculo.Placa</dd>
        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Vehiculo.Marca</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Vehiculo.Modelo</dd>
        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.Vehiculo.Año</dd>
        <dt class="col-sm-2">Kilometraje</dt>
        <dd class="col-sm-10">@Model.Vehiculo.Kilometraje</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
